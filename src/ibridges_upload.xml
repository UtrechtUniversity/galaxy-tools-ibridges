<?xml version="1.0"?>
<tool id="ibridges_upload" name="iBridges upload to iRDOS" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <requirements>
        <requirement type="package">ibridges</requirement>
    </requirements>
    <environment_variables>
        <environment_variable name="YODA_USER">$__user__.extra_preferences.get('irods_yoda|username', '')</environment_variable>
        <environment_variable name="YODA_PASS">$__user__.extra_preferences.get('irods_yoda|password', '')</environment_variable>
        <environment_variable name="TOOL_DIR">$__tool_directory__</environment_variable>
    </environment_variables>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__/ibridges_upload.py' --local_path '$local_path' --irods_path '$irods_path' --overwrite
    ]]></command>
    <inputs>
        <param name="irods_path" type="text" optional="false" label="iRODS path" />
        <param name="local_path" type="data" optional="false" format="data" label="Local path"/>
    </inputs>
    <help><![CDATA[
    Create help section here 
    ]]></help>
    <citations>
     </citations>
</tool>
